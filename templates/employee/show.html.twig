{% extends 'base.html.twig' %}

{% block title %}Employee{% endblock %}

{% block body %}
    <h1>Employee</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ employee.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ employee.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ employee.lastName }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_employee_index') }}">back to list</a>

    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <th>Starting date</th>
                <th>end date</th>
                <th>Company</th>
            </tr>
            {% for contract in employee.contracts %}
                <tr>
                    <td>{{ contract.id }}</td>
                    <td>{{ contract.startingDate ? contract.startingDate|date('Y-m-d') : ''}}</td>
                    <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : ''}}</td>
                    <td>{{ contract.company.name }}</td>
                </tr>
            {% endfor %}
            
        </tbody>
    </table>

    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}

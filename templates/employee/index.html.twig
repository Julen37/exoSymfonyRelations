{% extends 'base.html.twig' %}

{% block title %}Employee index{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <h1 class="text-center mb-3">Employee index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>BirthDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for employee in employees %}
            <tr>
                <td>{{ employee.id }}</td>
                <td>{{ employee.firstName }}</td>
                <td>{{ employee.lastName }}</td>
                <td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_employee_show', {'id': employee.id}) }}"class="btn btn-outline-light ">show</a>
                    <a href="{{ path('app_employee_edit', {'id': employee.id}) }}" class="btn btn-outline-success ">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_employee_new') }}" class="btn btn-success ">Create new</a>
</div>    
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Contract index{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <h1 class="text-center mb-3">Contract index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>StartingDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contract in contracts %}
            <tr>
                <td>{{ contract.id }}</td>
                <td>{{ contract.startingDate ? contract.startingDate|date('Y-m-d') : '' }}</td>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_contract_show', {'id': contract.id}) }}"class="btn btn-outline-light ">show</a>
                    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}" class="btn btn-outline-success ">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_contract_new') }}" class="btn btn-success ">Create new</a>
</div>    
{% endblock %}

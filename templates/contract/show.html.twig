{% extends 'base.html.twig' %}

{% block title %}Contract{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-3">Contract : {{ contract.id }}</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contract.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ contract.employee.lastName }} {{ contract.employee.firstName }}</td>
            </tr>
            <tr>
                <th>StartingDate</th>
                <td>{{ contract.startingDate ? contract.startingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ contract.endDate ? contract.endDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_contract_index') }}" class="btn btn-outline-dark mb-2">back to list</a>

    <a href="{{ path('app_contract_edit', {'id': contract.id}) }}" class="btn btn-success mb-2">edit</a>

    {{ include('contract/_delete_form.html.twig') }}
</div>
{% endblock %}

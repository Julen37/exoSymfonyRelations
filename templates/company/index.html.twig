{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}

{% block body %}
{{ parent() }}
<div class="container">
    <h1 class="text-center mb-3">Company index</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>FondationDate</th>
                <th>IsClosed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.fondationDate ? company.fondationDate|date('Y-m-d') : '' }}</td>
                <td>{{ company.isClosed ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_company_show', {'id': company.id}) }}"class="btn btn-outline-light ">show</a>
                    <a href="{{ path('app_company_edit', {'id': company.id}) }}" class="btn btn-outline-success ">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_company_new') }}" class="btn btn-success ">Create new</a>
</div>
{% endblock %}
